// OOP Tute 01 - Exercise 1
//Write a C program to input marks of two subjects. Calculate and print the average of the two marks.

#include<stdio.h>
int main()
{
	int mark1, mark2, sum, avg;
	
	printf("Enter mark1 : ");
	scanf("%d",&mark1);
	printf("Enter mark2 : ");
	scanf("%d",&mark2);
	
	sum = mark1 + mark2;
	
	//avg = sum/2;
	
	printf("Average mark is :%d", sum);
	
	return 0;
}
